<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pentoryall.order.mapper.OrderMapper">
    <insert id="insertOrder" parameterType="com.pentoryall.order.dto.OrderDTO" useGeneratedKeys="true"
            keyProperty="code">
        INSERT INTO `order`(user_code, amount, point)
        VALUES (#{userCode}, #{amount}, #{point});
    </insert>
    <select id="selectByOrderCode" resultType="com.pentoryall.order.dto.OrderDTO">
        SELECT code, user_code, amount, point, create_date
          FROM `order`
         WHERE code = #{ orderCode }
    </select>
</mapper>

